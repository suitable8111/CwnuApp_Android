<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cwnu_main_color5</item>
        <item name="colorPrimaryDark">@color/cwnu_main_color5</item>
        <item name="colorAccent">@color/cwnu_main_color5</item>
        <item name="colorControlNormal">@color/cwnu_main_color10</item>
    </style>
    <style name="AppThemeAddPost" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cwnu_main_color5</item>
        <item name="colorPrimaryDark">@color/cwnu_main_color5</item>

    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/cwnu_main_color3</item>
        <item name="tabIndicatorHeight">7dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>
    <style name="MyCustomTabLayoutBestFood" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/cwnu_main_color3</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@drawable/best_food_tab_color_selector</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="com_kakao_profile_property_label" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/com_kakao_profile_property_margin</item>
        <item name="android:layout_marginLeft">@dimen/com_kakao_profile_property_margin</item>
        <item name="android:layout_marginRight">@dimen/com_kakao_profile_property_margin</item>
        <item name="android:textSize">@dimen/com_kakao_profile_property_text</item>
        <item name="android:textColor">@color/com_kakao_profile_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="com_kakao_profile_property_value" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:background">@color/cwnu_main_color10</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="iconText" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/selector_item_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--<style name="spinner" parent="@android:style/Widget.TextView">-->
