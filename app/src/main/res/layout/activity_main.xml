    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <Button
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="창원대 톡에 오신것을 환영합니다."
            android:textSize="4pt"
            android:id="@+id/school_notice_info_button"
            android:background="@drawable/selector_button_notice"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:gravity="center"
            >
            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_profile"
                android:id="@+id/main_btn_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:text="프로필"/>
            </LinearLayout>

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_map_info"
                android:id="@+id/main_btn_2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:text="창원대 지도"/>
            </LinearLayout>
            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_school_food"
                android:id="@+id/main_btn_3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:text="식단표"/>
            </LinearLayout>

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_traffic_info"
                android:id="@+id/main_btn_4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:text="교통정보"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_free_board"
                android:id="@+id/main_btn_5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:text="창원대학교 대나무숲"/>
            </LinearLayout>

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_concil_board"
                android:id="@+id/main_btn_6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:text="총학생회 게시판"/>
            </LinearLayout>

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_best_food"
                android:id="@+id/main_btn_7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:text="창원대 와글"/>
            </LinearLayout>

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/selector_button_circle"
                android:id="@+id/main_btn_8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="5dp"
                android:gravity="center|top"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="동아리"
                    android:textSize="5pt"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--<LinearLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"></LinearLayout>-->
        <ImageView
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/main_down_logo"
            />

    </LinearLayout>

</LinearLayout>
