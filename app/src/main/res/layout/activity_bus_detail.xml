<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/cwnu_main_color10"
    tools:context="com.yeho.cwnuapp.bus.BusDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cwnu_main_color5"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.0">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="7pt"
                android:textStyle="bold"
                android:text="정류소 이름"
                android:textColor="@color/cwnu_main_color10"
                android:background="@color/cwnu_main_color5"
                android:id="@+id/bus_info_detail_title_back_button"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.0">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0">
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bus_info_detail_listView"
        android:layout_gravity="center_vertical"
        android:layout_weight="10" />
</LinearLayout>
